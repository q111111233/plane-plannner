@if (@Model.Count == 0)
{
  <p>No flights have been added yet!</p>
}
else
{
  <h1>Here is your list of flights:</h1>
  <ul>
    @foreach (var flight in Model)
    {
      <li><a href="/flights/@flight.GetId()">@flight.GetStatus()</a>
        @flight.GetFlightDepartureTime()

        <form action="/flightComplete" method="post">
          <input type="hidden" name="GetId" value = "@flight.GetId()">
          <label for="flight-complete">Done</label>
          <input type="checkbox" name="flight-complete" value = "true" >
        <button type='submit'>Add</button>
      </form></li>
    }
  </ul>
  <form action="/flights/delete" method="post">
    <button type="submit">Clear all flights</button>
  </form>
}
<p><a href="/flights/new">Add a new flight</a></p>
<p><a href="/">Return home</a></p>
