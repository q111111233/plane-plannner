<h2>Cities:</h2>
@if (@Model.Count == 0)
{
  <p>No cities have been added yet!</p>
}
else
  {
    <ul>
      @foreach (var city in Model)
      {
        <li><a href="/cities/@city.GetId()">@city.GetName()</a></li>
      }
    </ul>
  }

<h4><a href="/cities/new">Add a new city</a></h4>
<h4><a href="/">Return home</a></h4>
